<?xml version="1.0" encoding="utf-8"?>
<!-- selector allows it to light up when pressed -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
       <shape>
          <stroke android:color="@color/grassGreen" android:width="2dp" />
           <corners android:radius="10dp" />
       </shape>
    </item>
    <!-- default state -->
    <item>
        <shape>
            <stroke android:color="@color/paleGreen" android:width="2dp" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>